{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "width": "container", 
    "height": 900, 
    "background": "transparent",
    "config": {
        "axisX": {
            "labelAngle": 0
        }, 
        "title": {
            "color": "white" 
        },
        "axis": {
            "labelColor": "white", 
            "titleColor": "white" 
        }, 
        "legend": {
            "titleColor": "white", 
            "labelColor": "white",
            "symbolFillColor": "white"
    }
    },
    "data": {"url": "https://raw.githubusercontent.com/emanAtassi/FIT3179/main/data/gc.csv"}, 
    "transform": [
        {
            "calculate": "datum['co2_emissions_change'] > 0 ? 'Did not reduce Emissions' : 'Reduced Emissions'",
            "as": "positive_change"
        }, 
        {
            "fold": ["Entity", "co2_emissions_change"],
            "as": ["entityName", "emissionsChange"]
        },
        {
            "window": [{"op": "max", "field": "emissionsChange", "as": "maxEmissions"}],
            "groupby": ["change"]
        },
        {
            "filter": "datum.emissionsChange == datum.maxEmissions"
        }
    ],
    "params": [
        {
          "name": "highlight",
          "select": {"type": "point", "on": "mouseover"}
        },
        {"name": "select", "select": "point"}, 
        {
            "name": "types",
            "select": {"type": "point", "fields": ["change"]},
            "bind": "legend"
          }
    ],
    "vconcat": [
        {
            "spacing": 40, 
            "hconcat": [
                {
                    "layer": [
                    {
                    "title": "Asia",
                    "transform": [
                        {
                            "filter": "datum.continent == 'Asia'"
                        }   
                    ],
                    "mark": "circle",
                    "width": 300, 
                    "height": 300, 
                    "encoding": {
                        "x": {"field": "positive_change", "type": "nominal", "axis":
                        {"title": ""}} ,
                        "y": {"field": "co2_emissions_change", "type": "quantitative",  "title": "CO2 Emissions Change (%)"},
                        "color": {
                            "field": "change",
                            "type": "nominal", 
                            "scale": {
                                "domain": ["positive",  "negative"],
                                "range": ["gray", "#34c3eb"]
                              }, 
                              "legend": {
                                "selection": "legendToggle" 
                            }
                        }, 
                        "size": {"value": 100}, 
                        "fillOpacity": {
                            "condition": {"param": "select", "value": 1},
                            "value": 0.3
                        },
                        "opacity": {
                            "condition": {"param": "types", "value": 1},
                            "value": 0.2
                        }, 
                        "tooltip": [
                            {
                                "field": "Entity",
                                "title": "Country"
                            },
                            {
                                "field": "co2_emissions_change",
                                "title": "CO2 Emissions change (%)",
                                "format": ",d"
                            }
                        ]
                    }
                }
