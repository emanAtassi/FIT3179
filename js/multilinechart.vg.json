  "transform": [
    {
      "filter": "country_selection == null || datum.Entity == country_selection"
    },
    {
      "filter": "datum['co2_emissions'] > 600"
    },
    {
      "filter": "Continent_selection == null || datum.continent == Continent_selection"
    },
    {
      "window": [
        {
          "op": "last_value",
          "field": "co2_emissions",
          "as": "last_value"
        }
      ],
      "groupby": [
        "Entity"
      ]
    }
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "co2_emissions",
      "type": "quantitative",
      "title": "CO2 Emissions"
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "color": {
          "field": "Entity",
          "type": "nominal",
          "scale": {
            "range": [
              "#333333"
            ]
          },
          "legend": null
        },
        "opacity": {
          "condition": {
            "test": "datum['Entity'] == 'China' || datum['Entity'] == 'United States' || datum['Entity'] == 'India' ",
            "value": 1
          },
          "value": 0.1
        },
        "tooltip": [
          {
            "field": "Entity",
            "title": "Country"
          },
          {
            "field": "co2_emissions",
            "title": "CO2 Emissions",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum.year == 2002"
        }
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "Entity",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        }
      }
