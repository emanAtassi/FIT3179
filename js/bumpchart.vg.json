{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "../data/bcp.csv"  
  },
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "groupby": ["year"],
      "sort": [{"field": "co2_emissions", "order": "descending"}]
    }
  ],
  "mark": "line",
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "rank",
      "type": "ordinal",
      "title": "Rank"
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country"
    },
    "tooltip": [
      {"field": "Entity", "title": "Country"},
      {"field": "year", "type": "ordinal", "title": "Year"},
      {"field": "rank", "type": "ordinal", "title": "Rank"}
    ]
  },
  "width": 600,
  "height": 400
}