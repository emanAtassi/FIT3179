{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 580,
    "height": 600,
    "background": "transparent",
    "config": {
        "axisX": {
          "labelAngle": 0
      }, 
      "title": {
          "color": "white" 
      },
      "axis": {
          "labelColor": "white", 
          "titleColor": "white" 
      },
      "legend": {
          "titleColor": "white", 
          "labelColor": "white"
      }
  },
    "data": {"url": "https://raw.githubusercontent.com/emanAtassi/FIT3179/main/data/ac.csv", "format": {
        "parse": {"year": "number"}
      }},
    "params": [
        {
            "name": "yearfilter",
            "value": 2000,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 2019,
                "step": 1,
                "name": "Filter the years: "
            }
        }
    ],
    "transform": [
        {"filter": "datum.year >= yearfilter"}
    ],
    "encoding": {
      "x": {"field": "year",  "title": "Year", "axis": {"grid": false}},
      "y": {"field": "value", 
      "type": "quantitative", 
      "aggregate": "sum", 
      "axis": {"grid": false}, 
      "title": "CO2 Emissions"},
      "tooltip": [
        {
            "field": "value",
            "title": "CO2 Emissions",
            "format": ".2f"
        }
    ]
    },
    "layer": [
        {
            "mark": {"type": "area", 
            "opacity": 1, 
            "line": true},
            "encoding": {
              "color": {
                "field": "type",
                "type": "nominal", 
                "scale": {
                    "domain": ["top 5 polluters", "the rest"],
                    "range": ["#ff7f0e", "grey"]  
                }, 
                "legend": {
                  "orient": "top", 
                  "title": ""
                }
              }, 
              "order": {"field": "year"}
            }
          },
      {
        "mark": {"type": "area", 
        "opacity": 0.4},
        "encoding": {
          "color": {
            "field": "type",
            "type": "nominal"
          }, 
          "order": {"field": "value", "sort": "descending"}
        }
      }
    ]
  }